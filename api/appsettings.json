{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=revlodb;Username=postgres;Password=your_password;Port=5432;Include Error Detail=true"
  },
  "Database": {
    "AutoMigrate": true,
    "CreateDatabaseIfNotExists": true,
    "CommandTimeout": 30,
    "RetryOnFailure": true,
    "MaxRetryCount": 3,
    "RetryDelay": 5
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "RevloDB": "Information",
      "Microsoft": "Error",
      "Microsoft.AspNetCore": "Error", 
      "Microsoft.EntityFrameworkCore": "Critical",
      "Microsoft.EntityFrameworkCore.Database": "Critical",
      "Microsoft.EntityFrameworkCore.Database.Command": "Critical",
      "Microsoft.EntityFrameworkCore.Update": "Critical",
      "System": "Error",
      "Npgsql": "Critical"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": false
      }
    }
  },
  "AllowedHosts": "*"
}